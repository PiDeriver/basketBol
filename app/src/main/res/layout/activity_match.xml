<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_match"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.pideriver.a2017tatorscouttracingapp.Match">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imgField"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/full_field"
        />

    <Button
        android:text="To Next Match"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnToComments"
        android:background="#000000"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:text="To Comments"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnPause"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

    <android.support.v7.widget.AppCompatRadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:checked="true"
        android:background="#ffff00"
        android:id="@+id/robot"/>

    <Button
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:text="RESTART"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#ff0000"
        android:textColor="#ffffff"
        android:id="@+id/restartBtn"/>

    <Button
        android:layout_width="610dp"
        android:layout_height="60dp"
        android:text=""
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:textColor="#000000"
        android:visibility="invisible"
        android:clickable="false"/>
    <Button
        android:layout_width="600dp"
        android:layout_height="50dp"
        android:text="Pick"
        android:visibility="invisible"
        android:layout_marginTop="0dp"
        android:layout_centerHorizontal="true"
        android:background="#ffff00"
        android:textColor="#000000"
        android:id="@+id/pickBtn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Review Data"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/viewDataBtn"
        android:visibility="invisible"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recording"
        android:textColor="#ffffff"
        android:background="#000000"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/btnToComments"
        android:layout_marginTop="25dp"
        android:id="@+id/recordingText"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Died"
        android:layout_marginTop="70dp"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:id="@+id/ckBxDead"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/ckBxDead"
        android:layout_marginTop="70dp"
        android:text="Intermittent"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:id="@+id/ckBxIntermittent"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/ckBxIntermittent"
        android:layout_marginTop="70dp"
        android:text="Climb on Forklift/platform"
        android:textSize="20dp"
        android:textColor="#ffffff"
        android:background="#000000"
        android:id="@+id/ckBxClimb"/>

    <AutoCompleteTextView
        android:layout_width="900dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ckBxClimb"
        android:layout_marginTop="70dp"
        android:background="#000000"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="Edit me!"
        android:id="@+id/aCTVcomments"
        />


</RelativeLayout>
